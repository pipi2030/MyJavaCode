<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.neutech.mapper.UserMapper">
    <resultMap id="Base" type="com.neutech.entity.User">
        <id property="id" column="id"/>
        <result property="username" column="username"/>
        <result property="password" column="password"/>
        <result property="headImage" column="head_image"/>
    </resultMap>
    <select id="getAllByUserName" resultMap="Base">
        select id,username,password,head_image from s_user where username = #{username};
    </select>
    <insert id="register">
        insert into s_user(id,username,password,head_image) values
            (#{id},#{username},#{password},#{headImage});
    </insert>
</mapper>