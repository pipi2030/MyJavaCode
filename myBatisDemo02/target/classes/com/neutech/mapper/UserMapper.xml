<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.neutech.mapper.UserMapper">
    <select id="listUser" resultType="com.neutech.entity.User">
        select * from s_user where id = 3
    </select>
    <select id="getUserByName" resultType="com.neutech.entity.User">
        select *from s_user where username = #{username};
    </select>
    <delete id = "del">
        delete from s_user where id = 7;
    </delete>
    <update id="update">
        update s_user set username = "Right" where id = 4;
    </update>
    <insert id="insert">
        insert into s_user(username,password,role)values
        (#{username},#{password},#{role});
    </insert>
</mapper>